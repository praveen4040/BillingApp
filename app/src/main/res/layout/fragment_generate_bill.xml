    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="INVOICE GENERATION"
                            android:textSize="30sp"
                            app:fontFamily="@font/architects_daughter" />
                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/aleo"
                        android:text="Invoice No"
                        android:textSize="24sp"/>

                    <EditText
                        android:id="@+id/invoice_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="84dp"
                        android:layout_marginLeft="100dp"

                        android:layout_marginEnd="95dp"
                        android:layout_toEndOf="@+id/textview1"
                        android:ems="5" />

                </RelativeLayout>

                <!-- Repeat the above RelativeLayout for TextView and EditText 3-10 -->

                <!-- Third TextView and EditText -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/aleo"
                        android:text="Date"
                        android:textSize="24sp"/>

                    <EditText
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="39dp"
                        android:layout_marginEnd="74dp"
                        android:layout_toEndOf="@+id/textview2"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="78dp"
                        android:layout_height="43dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="232dp"
                        android:layout_marginEnd="12dp"
                        android:layout_toEndOf="@+id/textview2"
                        android:clickable="true"
                        android:onClick="imageClick"
                        android:src="@drawable/ic_twotone_calendar_today_24"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/aleo"
                        android:text="Bill Type"
                        android:textSize="24sp"/>

                    <EditText
                        android:id="@+id/type"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="29dp"
                        android:layout_marginEnd="114dp"
                        android:layout_toEndOf="@+id/textview3"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/bill_type"
                        android:layout_width="60dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="197dp"
                        android:layout_marginEnd="9dp"
                        android:layout_toEndOf="@+id/textview3"
                        android:clickable="true"
                        android:src="@drawable/ic_round_list_alt_24" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Shop Name"
                        android:textSize="24sp"
                        app:fontFamily="@font/aleo" />

                    <EditText
                        android:id="@+id/shop"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="105dp"
                        android:layout_toEndOf="@+id/textview4"
                        android:ems="20" />

                    <ImageView
                        android:id="@+id/shop_list"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="162dp"

                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/textview4"
                        android:clickable="true"
                        android:src="@drawable/ic_round_list_alt_24" />
                </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:fontFamily="@font/aleo"
                        android:text="Particulars"
                        android:textSize="24sp"/>

                        <EditText
                            android:id="@+id/stringp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="38dp"
                            android:layout_marginEnd="0dp"
                            android:layout_toEndOf="@+id/textview5"
                            android:ems="20"
                            android:hint="Enter the particular" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textview6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Weight"
                            android:textSize="24sp"
                            app:fontFamily="@font/aleo" />

                        <EditText
                            android:id="@+id/wgt"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="91dp"
                            android:layout_marginEnd="47dp"
                            android:layout_toEndOf="@+id/textview6"
                            android:ems="10"
                            android:hint="Enter weight"
                            android:inputType="number" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textview7"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Rate"
                            android:textSize="24sp"
                            app:fontFamily="@font/aleo" />

                        <EditText
                            android:id="@+id/rate"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="91dp"
                            android:layout_marginEnd="47dp"
                            android:layout_toEndOf="@+id/textview7"
                            android:ems="10"
                            android:inputType="number" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textview8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Amount"
                            android:textSize="24sp"
                            app:fontFamily="@font/aleo" />

                        <EditText
                            android:id="@+id/bamt"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="91dp"
                            android:layout_marginEnd="47dp"
                            android:layout_toEndOf="@+id/textview8"
                            android:ems="10"
                            android:inputType="number" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textview9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="CGST"
                            android:textSize="24sp"
                            app:fontFamily="@font/aleo" />

                        <EditText
                            android:id="@+id/cgst"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="91dp"
                            android:layout_marginEnd="47dp"
                            android:layout_toEndOf="@+id/textview9"
                            android:ems="10"
                            android:inputType="number" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textview10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="SGST"
                            android:textSize="24sp"
                            app:fontFamily="@font/aleo" />

                        <EditText
                            android:id="@+id/sgst"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="91dp"
                            android:layout_marginEnd="47dp"
                            android:layout_toEndOf="@+id/textview10"
                            android:ems="10"
                            android:inputType="number" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textview11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="TOTAL AMOUNT"
                            android:textSize="24sp"
                            app:fontFamily="@font/aleo" />

                        <EditText
                            android:id="@+id/aamt"
                            android:layout_width="137dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="37dp"
                            android:layout_marginEnd="52dp"
                            android:layout_toEndOf="@+id/textview11"
                            android:ems="10"
                            android:inputType="number" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">

                        <Button
                            android:id="@+id/amt_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="165dp"
                            android:backgroundTint="#48A145"
                            android:text="Generate Bill" />

                    </RelativeLayout>


                </LinearLayout>

        </ScrollView>

    </RelativeLayout>
